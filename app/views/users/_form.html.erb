<div class="container mb-3">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', error_input: @user %>
      <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-dark rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: 'col-2 col-form-label text-light' %>
          <% if @user.new_record? %>
            <div class="col-10">
              <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Enter username' %>
            </div>
          <% else %>
            <div class="col-10">
              <%= f.label @user.username, class: 'form-control shadow rounded' %>
            </div>
          <% end %>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter email' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Enter password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? 'Sign up' : 'Update Account', class: 'btn btn-outline-light btn-lg ml-4') %>
          <%= link_to('Home', root_path, class: 'btn btn-outline-danger btn-lg ml-4', data: { confirm: @user.new_record? ? 'Are you sure?' : 'All Unsaved data will be lost.' }) %>
        </div>
      <% end %>
    </div>
  </div>
</div>