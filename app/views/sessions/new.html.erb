<% @page_title = 'Login' %>
<h1 class="text-center mt-4">Login</h1>

<div class="container mb-3">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: 'shadow p-3 mb-3 bg-dark rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: 'col-2 col-form-label text-light' %>
            <div class="col-10">
              <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Enter username' %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Enter password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit('Login', class: 'btn btn-outline-light btn-lg ml-4') %>
          <%= link_to('Cancel', root_path , class: 'btn btn-outline-danger btn-lg ml-4') %>
        </div>
      <% end %>
    </div>
  </div>
</div>