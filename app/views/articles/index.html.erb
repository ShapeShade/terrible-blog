<% @page_title = 'Articles Index' %>
<h1>Articles listing</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
          <%= link_to('Show', article) %>
          <%= link_to('Edit', edit_article_path(article)) %>
          <%= link_to('Delete', article, method: :delete, data: { confirm: "Are you sure you want to delete #{article.title}?" }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
